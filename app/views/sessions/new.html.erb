<% provide(:title, "login") %>

<h1>ログイン</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(scope: :session, url: login_path, loal: true) do |f| %>
        
        <%= f.label :email, class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, class: "label-login" %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember_me" do %>
          <%= f.check_box :remember_me, id: "remember_me" %>
          <span>ログイン情報を記録する</span>
        <% end %>  

        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
      <% end %>
      <p>アカウント作成は<%= link_to "こちら", signup_path %>から</p>
    </div>
  </div>
</div>

